@page

<div class="text-center">
    <div>
        Username: <input type="text" id="usernameInput" placeholder="Enter your name" />
        <button id="connectBtn">Connect</button>
    </div>

    <div class="mt-3">
        Message: <input type="text" id="messageInput" />
        <button id="send" disabled>Send Message</button>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-8">
        <div id="newMessages">
            <h3>Chat Messages</h3>
        </div>
    </div>
    <div class="col-4">
        <div id="onlineUsers">
            <h3>Online Users</h3>
            <ul id="userList"></ul>
        </div>
    </div>
</div>

@section ChatBoard
{
    <h3 class="text-center">Welcome to the realtime chat board!</h3>
    <script src="~/js/simpleChat.js" asp-append-version="true"></script>
}
